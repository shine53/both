}
.float li {
    float: left;
}
.job-show li:nth-of-type(1) {
    width: 30%;
    text-align: left;
}
.job-show li:nth-of-type(2) {
    width: 20%;
}
.job-show li:nth-of-type(3) {
    width: 15%;
    text-align: left;
}
.job-show li:nth-of-type(4) {
    width: 30%;
}
.clearfix::after {
    display: block;
    content: "";
    height: 0;
    visibility: hidden;
    clear: both;
}
.br {
    border-right: 1px solid #fff;
}
.btn-link {
    display: block;
    float: right;
    width: 100px;
    /* #7c8ca7 */
    background-color: rgba(124, 140, 167, 0.8);
